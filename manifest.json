{
    "manifest_version": 2,

    "name": "YT video info",
    "description": "This extension will give youtube video details when link is hovered",
    "version": "1.0",
    "icons":{
        "32": "icon 32x32.png",
        "64": "icon 64x64.png"
    },
    "browser_action": {
        "default_icon": {"64": "icon 64x64.png"}
    },
    "permissions": ["activeTab"], 
    "background": {
        "scripts": ["background.js"]
    },
    "web_accessible_resources": [
        "secrets.json"
    ]
}